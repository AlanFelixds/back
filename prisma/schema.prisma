generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  password String
  name     String
  role     Role     @default(servidor)
  events   Events[]

  @@map("user")
}

model Events {
  id         String   @id @default(uuid())
  name       String
  date_event DateTime
  created_at DateTime @default(now())
  user_id    String
  user       User?    @relation(fields: [user_id], references: [id])
  // participants Participants @relation(fields: [participantsID], references: [id])
  // participantsID Int

  @@map("events")
}

model Participants {
  id    Int    @id @default(autoincrement())
  name  String
  email String
  // events Events[]

  @@map("participants")
}

enum Role {
  servidor
  admin
  reitor
  dep
}
